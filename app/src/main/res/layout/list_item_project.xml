<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin_small"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llJobCriteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin_extra_small"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_extra_small"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Software Engineer"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_large"
                    />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_extra_small">


                <ImageView
                    android:id="@+id/ivHot"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ivHot"
                    android:layout_toRightOf="@id/ivHot"
                    android:layout_marginLeft="@dimen/activity_margin_extra_small"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Actiknow Business Consulting Pvt Ltd"
                    android:textColor="@color/text_color_grey_dark"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="2"
                    android:text="8 hour"
                    android:paddingRight="@dimen/activity_margin_small"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
