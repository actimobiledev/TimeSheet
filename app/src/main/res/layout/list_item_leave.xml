<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/activity_margin"
        android:paddingLeft="@dimen/activity_margin"
        android:src="@drawable/ic_cancel"
    />

    <TextView
        android:id="@+id/tvEmployeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emp : KARMAN SINGH"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvType"
        android:layout_width="match_parent"
        android:layout_below="@+id/tvEmployeeName"
        android:layout_height="wrap_content"
        android:text="Casual Leave"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvAppliedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvType"
        android:text="Applied 13 days ago"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvLeaveDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppliedAt"
        android:text="Leave Date(s) : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLeaveDates"
        android:text="Reason : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_marginTop="@dimen/activity_margin_small"
        android:weightSum="3.0">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_small"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Approved"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Updated By"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_small"/>
            <TextView
                android:id="@+id/tvUpdatedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Karman Singh"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvRemark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:text="Remark : "
        android:layout_marginTop="@dimen/activity_margin_extra_small"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRemark"
        android:layout_marginTop="@dimen/activity_margin_small"
        android:visibility="gone"
        android:weightSum="2.0">
        <TextView
            android:id="@+id/tvApprove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_margin_small"
            android:layout_weight="1.0"
            android:background="@drawable/circle_button"
            android:gravity="center"
            android:padding="@dimen/activity_margin_small"
            android:text="APPROVE"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDecline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_small"
            android:layout_weight="1.0"
            android:background="@drawable/circle_button"
            android:gravity="center"
            android:padding="@dimen/activity_margin_small"
            android:text="DECLINE"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>