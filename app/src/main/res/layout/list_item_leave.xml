<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Casual Leave"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvAvailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leaves Availed : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave From : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvTill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Till : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvAppliedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applied At : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvUpdatedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Updated By : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tvUpdatedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Updated At : "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_small"/>
</LinearLayout>